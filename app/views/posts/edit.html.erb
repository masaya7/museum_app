<h3 >編集</h3>
<div class="show">
  <%= form_with model:@post do |f| %>
    <ul class="show-group">
      <ul class="show-item-left">
        <ul class="show-image">
          <li class="show-frame">
            <%= image_tag("額縁.png", alt: "額縁", class: "show-frame-inner") %>
            <%= image_tag @post.image.url,class: "show-image-inner"%>
          </li>
        </ul>
      </ul>
      <ul class="show-item-right">
        <li class="show-title">
          <%= f.label :title,"題名" %>
          <%= f.text_area :title ,size: "25x1"%>
        </li>
        <li class="show-body">
          <%= f.label :body,"投稿内容" %>
          <%= f.text_area :body,size: "70x25" %>
        </li>
        <li class="button">
          <%= f.select :status, Post.statuses.keys.map { |k| [t("enums.post.status.#{k}"),k]}, {}, {class: "custom-select"} %>
          <%= f.submit "OK", class: "btn btn-primary" %>
        </li>
      </ul>
    </ul>
  <% end %>
</div>