<h3 class="page-header">編集ページ</h3>
<div class="main">
  <%= form_with model:@post do |f| %>
    <div class="content-left">
      <div class='mt-3 mb-3'>
        <%= image_tag @post.image.url,size: '400x400' %>
      </div>
      <p><%= f.label :title,"タイトル" %></p>
      <p><%= f.text_area :title %></p>
    </div>
    <div class="content-light">
      <p><%= f.label :body,"投稿内容" %></p>
      <p><%= f.text_area :body %></p>
    </div>
    <p><%= f.submit "投稿", class: "btn btn-primary" %></p>
    <div class="form-group">
      <%= f.select :status, Post.statuses.keys.map { |k| [t("enums.post.status.#{k}"),k]}, {}, {class: "custom-select w-25"} %>
    </div>
  <% end %>
</div>

