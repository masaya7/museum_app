<div class="main">
  <%= form_with model:@post do |f| %>
    <div class="content-image-title">
      <div class='mt-3 mb-3'>
        <%= image_tag @post.image.url,
                      id: 'preview',
                      size: '400x400' %>
      </div>
      <p>題名: <%= @post.title %></p>
    </div>
    <div class="content-body">
      <p><%=  @post.body %></p><!--スクロールバーにしたい-->
    </div>
    <p><%= render "posts/btn", post: @post %></p>
  <% end %>
</div>