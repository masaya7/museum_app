<h3 class="page-header">下書き一覧</h3>
<ul class="post-group">
  <% @post.each do |post| %>
    <ul class="post-group-item">
      <div class="item-left">
        <li class="image">
          <div class="frame-image">
            <%= image_tag post.compose_image, class: "content-image", width: "195", height: "260" %>
          </div>
        </li>
      </div>
      <div class="item-right">
        <li class="title">
          <%="題名:" + post.title.truncate(15) %>
        </li>
        <li class="body">
          <%= post.body.truncate(100)%>
          <%= link_to "詳しく読む", post_path(post.id) %>
        </li>
        <li class="navbar-nav d-none d-lg-flex flex-row">
          <%= button_to "削除", post_path(post), method: :delete %>
          <%= button_to "編集する", edit_post_path(post), method: :get%>
        </li>
      </div>
    </ul>
  <% end %>
  <%= paginate @post, theme: 'bootstrap-5' %>
</ul>