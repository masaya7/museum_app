<% content_for :js do %>
  <%= javascript_import_module_tag "slideshow/endless" %>
<% end %>

<div class="wrap">
  <ul class="slideshow" data-controller="slideshow" id="slideshow">
    <% (1..3).each do |num| %>
      <li class="content" data-slideshow-target="content">
        <%= image_tag "photo#{num}.jpg", class: 'slide-image' %>
        <%= image_tag "image#{num}.jpg", class: 'slide-image' %>
        <%= image_tag "graph#{num}.jpg", class: 'slide-image' %>
      </li>
    <% end %>
  </ul>
  <div class="fixed-text">
    <p>あなただけの美術館を作ろう</p>
    <%= button_to "ゲストログインをする", guest_login_path, method: :post %>
  </div>
</div>

<footer class="footer">
  <div class="container">
    <p class="text-muted"><%= render "shared/footer" %></p>
  </div>
</footer>